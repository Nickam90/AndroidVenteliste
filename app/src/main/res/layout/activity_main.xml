<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    tools:context=".LoginActivity"
    android:textAlignment="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Velkommen til \nregionernes \nskadestueventeliste"
        android:id="@+id/main_title_textView"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Indtast din udleverede 6-cifret \nkode for at se din plads i kÃ¸en"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_below="@+id/main_title_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="6"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView">

        <EditText
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/loginNumberField1"
            android:layout_row="0"
            android:layout_column="0"
            android:numeric="integer"
            android:textAlignment="center"
            android:focusable="true" />


        <EditText
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/loginNumberField2"
            android:layout_row="0"
            android:layout_column="1"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/loginNumberField3"
            android:layout_column="2"
            android:layout_row="0"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/loginNumberField4"
            android:layout_column="3"
            android:layout_row="0"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/loginNumberField5"
            android:layout_row="0"
            android:layout_column="4"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/loginNumberField6"
            android:layout_row="0"
            android:layout_column="5"
            android:textAlignment="center"/>

    </GridLayout>

</RelativeLayout>
